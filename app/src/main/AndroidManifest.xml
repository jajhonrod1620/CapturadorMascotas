<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jjhon.jrodriguez.capturador">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MiAplicacion"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Logueo"
            android:label="@string/title_activity_logueo"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".Inicio"
            android:label="AgendaMascotas" />
        <activity
            android:name=".Capturador"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CapturaEvento"
            android:label="@string/title_activity_captura_evento"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ListaMascotas"
            android:label="@string/title_activity_lista_mascotas"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ListaEventos"
            android:label="@string/title_activity_lista_eventos"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name=".Splash"
            android:label="@string/agenda_mascota"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>